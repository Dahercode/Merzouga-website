---
import { Image } from 'astro:assets';
---

<p class="odyssey-logo">
  <Image
    class="logo"
    src="/assets/images/logo.svg"
    alt="True Morocco Tours"
    width={150}
    height={50}
    loading="eager"
  />
</p>

<style>
  .odyssey-logo {
    width: fit-content;
    margin: 0;
    font-family: var(--theme-font-family-serif);
    font-size: var(--font-size-md);
    color: inherit;
  }
  .odyssey-logo:hover {
    text-decoration: underline;
    cursor: pointer;
  }
  .logo {
    width: 150px;
    height: auto;
  }
</style>
