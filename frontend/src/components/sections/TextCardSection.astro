---
import Container from '../core/Container.astro';

const { surfaceNumber = 1 } = Astro.props;
---

<section
  class="constrained-text-hero__section"
  style={`background-color: var(--theme-surface-${surfaceNumber});`}
>
  <Container narrow>
    <slot />
  </Container>
</section>

<style>
  .constrained-text-hero__section {
    margin: var(--section-margin) auto;
    padding: clamp(4vh, 6vh, 8vh) 2rem;
    border-radius: var(--theme-shape-radius);
    text-align: center;
  }
</style>
