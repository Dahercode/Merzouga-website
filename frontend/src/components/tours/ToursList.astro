---
import ToursPreview from './ToursPreview.astro';

const { tours } = Astro.props;
---

<ul class="tours-list__list">
  {
    tours?.map((tour) => {
      return <ToursPreview tour={tour} />;
    })
  }
</ul>

<style>
  .tours-list__list {
    margin: 0;
    padding: 0;
    list-style: none;
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
  }
  @media (max-width: 768px) {
    .tours-list__list {
      grid-template-columns: 1fr;
    }
  }
</style>
