---
import { changeLanguage, t } from "i18next";
import ContactForm from "../../../components/forms/ContactForm.astro";
import Layout from "../../../layouts/Page.astro";
import { Container } from "@components/odyssey-theme";

changeLanguage("fr");

const seo = {
  title: t('contact:page.title') + " | True Morocco Tours",
  description: t('contact:page.description'),
};
---

<Layout {seo}>
  <Container>
    <section class="contact-hero__section">
      <div class="contact-hero__text-section">
        <h1>{t('contact:page.title')}</h1>
        <p>
          {t('contact:page.description')}
        </p>
        <div class="contact-info">
          <p>
            <em><a href={`tel:${t('contact:page.phone')}`}>{t('contact:page.phone')}</a></em> â€¢ <em
              ><a href={`mailto:${t('contact:page.email')}`}>{t('contact:page.email')}</a
              ></em
            >
          </p>
        </div>
      </div>
      <div class="col-2__container">
        <ContactForm />
      </div>
    </section>
  </Container>
</Layout>

<style>
  .contact-hero__section {
    margin: var(--section-margin) auto;
    display: grid;
    grid-template-columns: 1fr 1fr;
    min-height: calc(90vh - var(--navbar-height));
    gap: 3rem;
  }
  .contact-hero__text-section {
    padding: 2rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
    background-color: var(--theme-surface-1);
    border-radius: var(--theme-shape-radius);
  }
  .contact-hero__text-section h1 {
    margin-bottom: 1.5rem;
  }
  .contact-hero__text-section p {
    font-size: 1.1rem;
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }
  .contact-info {
    margin-top: auto;
  }
  .contact-info p {
    font-size: 1rem;
  }
  .contact-info a {
    color: var(--theme-primary);
    text-decoration: none;
    transition: color var(--theme-transition);
  }
  .contact-info a:hover {
    color: color-mix(in srgb, var(--theme-primary) 80%, var(--theme-on-bg));
  }
  .col-2__container {
    display: flex;
    flex-direction: column;
    justify-content: center;
  }
  @media (max-width: 768px) {
    .contact-hero__section {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
  }
</style>
